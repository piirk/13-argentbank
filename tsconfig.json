{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@common/*": ["src/common/*"],
      "@components/*": ["src/common/components/*"],
      "@features/*": ["src/features/*"],
      "@assets/*": ["src/assets/*"],
      "@redux/*": ["src/app/redux/*"],
      "@services/*": ["src/services/*"]
    }
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": ["node_modules"]
}
